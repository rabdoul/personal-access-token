{
  "name": "cutting-room-production-process-server",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "clean-all": "rm -rf ./build && rm -rf ./node_modules",
    "build": "tsc -p ./",
    "build-server-debug": "tsc --sourceMap true -p ./",
    "start": "nodemon -r dotenv/config --watch src --exec ts-node src/CuttingRoomProductionProcessApplication.ts",
    "test": "jest --watch",
    "test-ci": "jest --reporters=jest-junit --coverage --coverageDirectory=./reports/server-coverage"
  },
  "dependencies": {
    "amqplib": "0.8.0",
    "amqplib-rt": "1.0.0",
    "body-parser": "1.19.1",
    "cls-hooked": "4.2.2",
    "compression": "1.7.4",
    "cutting-room-units": "0.1.1",
    "express": "4.17.2",
    "express-history-api-fallback": "2.2.1",
    "express-pino-logger": "5.0.0",
    "fast-json-patch": "3.1.0",
    "feature-policy": "0.6.0",
    "helmet": "4.6.0",
    "lectra-auth-nodejs": "0.3.0",
    "lodash": "4.17.21",
    "node-fetch": "2.6.1",
    "permissions-policy": "0.6.0",
    "pino": "6.13.3",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/lodash": "4.14.178",
    "@types/amqplib": "^0.8.2",
    "@types/body-parser": "^1.19.2",
    "@types/cls-hooked": "^4.3.3",
    "@types/express": "^4.17.13",
    "@types/helmet": "4.0.0",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/lru-cache": "^5.1.1",
    "@types/node": "17.0.2",
    "@types/pino": "^6.3.12",
    "@types/semaphore": "^1.1.1",
    "@types/uuid": "^8.3.3",
    "dotenv": "8.6.0",
    "jest": "^27.4.5",
    "jest-junit": "^13.0.0",
    "nock": "13.2.1",
    "node-mocks-http": "^1.11.0",
    "nodemon": "2.0.15",
    "ts-jest": "^27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.1.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageReporters": [
      "cobertura"
    ]
  },
  "jest-junit": {
    "suiteName": "Jest Tests",
    "outputDirectory": "./reports",
    "outputName": "server-test-results.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}

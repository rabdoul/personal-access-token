{
  "name": "cutting-room-production-process",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "clean-all": "rm -rf ./build && rm -rf ./node_modules",
    "build": "tsc -p ./",
    "build-server-debug": "tsc --sourceMap true -p ./",
    "start": "nodemon -r dotenv/config --watch src --exec ts-node src/CuttingRoomProductionProcessApplication.ts",
    "test": "jest --watch",
    "test-ci": "jest --reporters=jest-junit --coverage --coverageDirectory=./reports/server-coverage"
  },
  "dependencies": {
    "amqplib": "0.5.5",
    "amqplib-rt": "0.0.3",
    "body-parser": "1.19.0",
    "cls-hooked": "4.2.2",
    "compression": "1.7.4",
    "express": "4.17.1",
    "express-history-api-fallback": "2.2.1",
    "express-pino-logger": "5.0.0",
    "helmet": "3.21.3",
    "helmet-csp": "2.9.5",
    "lectra-auth-nodejs": "0.2.0",
    "node-fetch": "2.6.1",
    "pino": "5.17.0",
    "uuid": "7.0.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.13",
    "@types/body-parser": "^1.19.0",
    "@types/cls-hooked": "^4.3.0",
    "@types/express": "^4.17.3",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.3",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "13.7.7",
    "@types/pino": "^5.15.5",
    "@types/semaphore": "^1.1.0",
    "@types/uuid": "^7.0.0",
    "dotenv": "8.2.0",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0",
    "nock": "13.0.4",
    "node-mocks-http": "^1.8.1",
    "nodemon": "2.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageReporters": [
      "cobertura"
    ]
  },
  "jest-junit": {
    "suiteName": "Jest Tests",
    "outputDirectory": "./reports",
    "outputName": "server-test-results.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
